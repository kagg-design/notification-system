<?xml version="1.0"?>
<ruleset name="WPML">
	<description>WPML Coding Standards</description>

	<config name="testVersion" value="5.2"/>

	<rule ref="PHPCompatibility">
		<exclude name="PHPCompatibility.PHP.NewFunctionParameters.array_unique_sort_flagsFound"/>
		<exclude name="PHPCompatibility.PHP.NewIniDirectives.max_input_varsFound"/>
	</rule>

	<rule ref="PHPCompatibility.PHP.NewFunctions">
		<exclude-pattern>*/class-wpml-wp-api.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctionParameters">
		<exclude-pattern>*/class-wpml-wp-api.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctions.array_columnFound">
		<exclude-pattern>*/sitepress.class.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctionParameters.debug_backtrace_optionsFound">
		<exclude-pattern>*/sitepress.class.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctionParameters.debug_backtrace_limitFound">
		<exclude-pattern>*/sitepress.class.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctions.openssl_random_pseudo_bytesFound">
		<exclude-pattern>*/wpml-data-encryptor.class.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctions.openssl_encryptFound">
		<exclude-pattern>*/wpml-data-encryptor.class.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctions.openssl_decryptFound">
		<exclude-pattern>*/wpml-data-encryptor.class.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctionParameters.openssl_encrypt_ivFound">
		<exclude-pattern>*/wpml-data-encryptor.class.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewFunctionParameters.openssl_decrypt_ivFound">
		<exclude-pattern>*/wpml-data-encryptor.class.php</exclude-pattern>
	</rule>
	<rule ref="PHPCompatibility.PHP.NewKeywords.t_namespaceFound">
		<exclude-pattern>*/class-wpml-rest-base.php</exclude-pattern>
	</rule>



	<exclude-pattern>*/bin/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*.mo</exclude-pattern>
	<exclude-pattern>*.po</exclude-pattern>
	<exclude-pattern>*.twig</exclude-pattern>
	<exclude-pattern>*.css</exclude-pattern>
	<exclude-pattern>*.scss</exclude-pattern>


</ruleset>